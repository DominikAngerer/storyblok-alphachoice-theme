{{product.content._editable}}
<a class="product_card uk-display-block uk-link-reset" href="/{{product.full_slug}}">
  <div class="product_card__image">
    <img src="{{product.content.front_image}}" alt="{{product.name}}">
  </div>
  <h3 class="product_card__headline">{{product.name}}</h3>
  <p class="product_card__price">{{product.content.price}}</p>
</a>